{
  "name": "jtmpl-core",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/atmin/jtmpl-core.git"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    }
  ],
  "devDependencies": {
    "browserify": "^4.2.0",
    "element-class": "^0.1.1",
    "freak": "0.2.2",
    "jshint": "^2.5.1",
    "phantomjs": "^1.9.7-12",
    "simple-server": "^1.0.1",
    "uglify-js": "^2.4.14",
    "watchify": "^0.10.2"
  },
  "scripts": {
    "jshint": "jshint src/*.js",
    "browserify": "browserify --standalone jtmpl src/main.js > jtmpl-core.js",
    "watch": "watchify --standalone jtmpl src/main.js -o jtmpl-core.js -dv",
    "uglify": "uglifyjs jtmpl-core.js -c -m --screw-ie8 -o jtmpl-core.min.js",
    "start": "npm run dev",
    "dev": "simple-server & (sleep 1 && xdg-open http://localhost:3000/tests/index.html) && npm run watch",
    "build": "npm run jshint && npm run browserify && npm run uglify",
    "test": "npm run build && phantomjs tests/phantom.js"
  }
}
